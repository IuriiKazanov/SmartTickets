@model SmartTickets.Models.Order
@using SmartTickets.Models;
@{
    ViewBag.Title = "Change";
}

@{TicketsContext db = new TicketsContext();
    var event_ = db.Events.Find(Model.EventId);
    <h2>@event_.Artist</h2>
    <h3>@event_.Name</h3>
    <br />
}

@using (Html.BeginForm("Sell", "Change"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <input id="id" name="id" type="hidden" value=@Model.Id />
        <h4>Введите количество:</h4>
        <input type="number" id="count" value="1" name="count" min="1" max=@Model.Count>
        <h4>Введите цену:</h4>
        @Html.TextBox("price")
        <input type="submit" value="OK" class="btn btn-default" />
    </div>
}